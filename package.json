{
  "name": "@piraisoodan/tanglish",
  "version": "0.0.1",
  "description": "Offline English to Tamil transliteration engine (Azhagi-style)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tiptap": {
      "types": "./dist/tiptap.d.ts",
      "import": "./dist/tiptap.mjs",
      "require": "./dist/tiptap.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/tiptap.ts --format cjs,esm --dts",
    "test": "tsx test/index.spec.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tamil",
    "transliteration",
    "offline",
    "tiptap"
  ],
  "peerDependencies": {
    "@tiptap/core": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@tiptap/core": {
      "optional": true
    }
  },
  "author": "Piraisoodan Team",
  "license": "ISC",
  "devDependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/pm": "^2.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "bun-types": "latest"
  },
  "dependencies": {
    "@indic-transliteration/sanscript": "^1.3.3"
  }
}
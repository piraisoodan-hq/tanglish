{
  "name": "@piraisoodan/tanglish",
  "version": "0.1.2",
  "type": "module",
  "description": "Offline transliteration engine for Indian languages - Tamil (Tanglish), Hindi (Hinglish), Malayalam (Manglish), Telugu (Tenglish)",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --format esm && bun x tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "bun test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "bun run build",
    "prepublishOnly": "bun run lint && bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piraisoodan-hq/tanglish.git"
  },
  "bugs": {
    "url": "https://github.com/piraisoodan-hq/tanglish/issues"
  },
  "homepage": "https://github.com/piraisoodan-hq/tanglish#readme",
  "keywords": [
    "tamil",
    "hindi",
    "malayalam",
    "telugu",
    "tanglish",
    "hinglish",
    "manglish",
    "tenglish",
    "transliteration",
    "offline",
    "indian-languages"
  ],
  "author": "Piraisoodan Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "bun-types": "latest",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0"
  }
}
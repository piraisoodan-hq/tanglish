{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src",
    "tools"
  ],
  "exclude": [
    "benchmarks",
    "test"
  ]
}